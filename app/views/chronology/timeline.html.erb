<div class="timeline">
  <div class="line">
    <% -4100.upto(2200) do |number| %>
      <% if number % 200 == 0 %>
        <span class="year"><%= Year.new(number) %></span>
      <% end %>
    <% end %>
  </div>
  <br>
  
  <div class="events">
    <% @timeline.each do |event| %>
      <% event = EventDecorator.new(event) %>
      <div class="event" style="<%= event.inline_css  %>" title="<%= event.name %>"><%= event.formatted_year  %> - <%= event.name %></div>
    <% end %>
  </div>
</div>
